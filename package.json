{
  "name": "coderscamp2021.project.fullstack",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodersCamp2021-HK/CodersCamp2021.Project.Fullstack.git"
  },
  "bugs": {
    "url": "https://github.com/CodersCamp2021-HK/CodersCamp2021.Project.Fullstack/issues"
  },
  "homepage": "https://github.com/CodersCamp2021-HK/CodersCamp2021.Project.Fullstack#readme",
  "engines": {
    "yarn": "3.1.1",
    "node": "16.x"
  },
  "packageManager": "yarn@3.1.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach -pi run dev",
    "build": "yarn workspaces foreach -pi --from \"{@fullstack/sdk,@fullstack/database}\" run build && yarn workspaces foreach -pi --from \"{@fullstack/server,@fullstack/client}\" run build",
    "start": "yarn workspace @fullstack/server run start",
    "test": "yarn workspaces foreach -pi run test",
    "lint": "yarn workspaces foreach -pi run lint",
    "format": "yarn workspaces foreach -pi run format",
    "dev:server": "yarn workspaces foreach -pi --from \"{@fullstack/server,@fullstack/database}\" run dev",
    "gen:sdk": "yarn workspace @fullstack/server tools:gen && yarn workspace @fullstack/sdk gen"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.1",
    "@types/node": "^17.0.16",
    "@types/prettier": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
